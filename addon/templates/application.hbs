<EmberWormhole @to="sidebar-menu-items">
    <Layout::Sidebar::Panel @open={{true}} @title={{t "iam.application.access-management"}}>
        <Layout::Sidebar::Item @route="console.iam.home" @icon="home">{{t "iam.common.dashboard"}}</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.iam.users" @icon="id-card" @permission="iam list user">{{t "iam.common.user"}}</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.iam.groups" @icon="building" @permission="iam list groups">{{t "iam.common.group"}}</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.iam.roles" @icon="tag" @permission="iam list roles">{{t "iam.common.role"}}</Layout::Sidebar::Item>
        <Layout::Sidebar::Item @route="console.iam.policies" @icon="shield" @permission="iam list policies">{{t "iam.common.policies"}}</Layout::Sidebar::Item>
    </Layout::Sidebar::Panel>
</EmberWormhole>

<Layout::Section::Container>
    {{outlet}}
</Layout::Section::Container>